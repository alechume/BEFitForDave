<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />
    <link href="~/css/simplebar.css" rel="stylesheet" />
    @RenderSection("Stylesheets", required: false)
    <link rel="stylesheet" href="~/css/site.css" />

    <noscript>
        <style>
            .simplebar-content-wrapper {
                overflow: auto;
            }
        </style>
    </noscript>

</head>
<body>
    <div class="wrapper">
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-content" data-simplebar>
                <a class="sidebar-toggle" onclick="toggleSidebar()">
                    <i class="fas fa-bars"></i>
                </a>
                <div class="sidebar-avatar">
                    <div class="d-block text-center">
                        <img src="~/img/img_avatar.png" alt="avatar" />
                    </div>
                    <div class="d-block text-center">
                        <span class="text-center font-weight-bold">Username</span>
                    </div>
                </div>
                <a class="sidebar-brand" asp-area="" asp-page="/Index">
                    <i class="fab fa-behance-square"></i>
                    <span>Dashboard</span>
                </a>
                <ul class="nav flex-column">
                    <li class="sidebar-item">
                        <a class="sidebar-link @(ViewData["ActivePage"].ToString() == "Index" ? "active" : "")" asp-area="" asp-page="/Index">
                            <i class="fas fa-tachometer-alt"></i>
                            Home
                        </a>
                    </li>
                    <li class="sidebar-item">
                        @await Html.PartialAsync("_ClientsMenuPartial", new _ClientsMenuPartialModel())
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link collapsed" href="#collapseExample2" data-toggle="collapse" aria-expanded="@(ViewData["ActiveDropdown"].ToString() == "Dropdown2" ? "true" : "false")">
                            <i class="fab fa-canadian-maple-leaf"></i>
                            Dropdown2
                        </a>
                        <ul class="sidebar-dropdown list-unstyled collapse @(ViewData["ActiveDropdown"].ToString() == "Dropdown2" ? "show" : "")" id="collapseExample2" data-parent="#sidebar">
                            <li class="sidebar-item">
                                <a class="sidebar-link @(ViewData["ActivePage"].ToString() == "Page4" ? "active" : "")" asp-area="" asp-page="/Page4">Page4</a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" href="#">Link</a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" href="#">Link</a>
                            </li>
                        </ul>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link collapsed" href="#collapseExample3" data-toggle="collapse">
                            <i class="fas fa-cog"></i>
                            Dropdown
                        </a>
                        <ul class="sidebar-dropdown list-unstyled collapse" id="collapseExample3" data-parent="#sidebar">
                            <li class="sidebar-item">
                                <a class="sidebar-link" href="#">Link</a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" href="#">Link</a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" href="#">Link</a>
                            </li>
                        </ul>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link collapsed" href="#collapseExample4" data-toggle="collapse">
                            <i class="fas fa-desktop"></i>
                            Dropdown
                        </a>
                        <ul class="sidebar-dropdown list-unstyled collapse" id="collapseExample4" data-parent="#sidebar">
                            <li class="sidebar-item">
                                <a class="sidebar-link" href="#">Link</a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" href="#">Link</a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" href="#">Link</a>
                            </li>
                        </ul>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link collapsed" href="#collapseExample5" data-toggle="collapse">
                            <i class="fas fa-file-powerpoint"></i>
                            Dropdown
                        </a>
                        <ul class="sidebar-dropdown list-unstyled collapse" id="collapseExample5" data-parent="#sidebar">
                            <li class="sidebar-item">
                                <a class="sidebar-link" href="#">Link</a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" href="#">Link</a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" href="#">Link</a>
                            </li>
                        </ul>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link collapsed" href="#collapseExample6" data-toggle="collapse">
                            <i class="fas fa-hamburger"></i>
                            Dropdown
                        </a>
                        <ul class="sidebar-dropdown list-unstyled collapse" id="collapseExample6" data-parent="#sidebar">
                            <li class="sidebar-item">
                                <a class="sidebar-link" href="#">Link</a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" href="#">Link</a>
                            </li>
                            <li class="sidebar-item">
                                <a class="sidebar-link" href="#">Link</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="main">
            <nav class="navbar navbar-expand navbar-light bg-white sticky-top">
                <div class="navbar-collapse collapse">
                    <a class="sidebar-toggle" onclick="toggleSidebar()">
                        <i class="fas fa-bars"></i>
                    </a>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["ActivePage"].ToString() == "Index" ? "active" : "")" asp-area="" asp-page="/Index">Home</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <main class="content">
                <div class="container-fluid p-0">
                    @RenderBody()
                </div>
            </main>
            <footer class="border-top footer text-muted">
                <div class="container text-center">
                    &copy; 2020 - BEFit
                </div>
            </footer>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/simplebar.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
